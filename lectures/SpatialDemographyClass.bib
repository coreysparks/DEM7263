issn = {1471-2458},
journal = {BMC Public Health},
keywords = {Capacity Building,Community Networks,Cooperative Behavior,Female,Focus Groups,Guidelines as Topic,Health,Health Plan Implementation,Health Policy,Health Promotion,Health Promotion: economics,Health Status,Healthcare Disparities,Humans,Interviews as Topic,Male,Organizational Case Studies,Resource Allocation,Resource Allocation: methods,Social Change,Socioeconomic Factors,South Australia},
