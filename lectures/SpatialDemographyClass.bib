author = {Yang, Tse Chuan and Teng, Huei W. and Haran, Murali},
doi = {10.1007/s12061-009-9025-9},
isbn = {1206100990},
issn = {1874463X},
journal = {Appl. Spat. Anal. Policy},
keywords = {Infant mortality,Low birth weight,Social capital,Spatial Poisson regression},
